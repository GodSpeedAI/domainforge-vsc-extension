{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DomainForge SEA DSL",
  "scopeName": "source.sea",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sea",
          "match": "//.*$"
        },
        {
          "name": "comment.block.sea",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sea",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sea",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sea",
          "match": "\\b(namespace|version|use|import|from|as)\\b"
        },
        {
          "name": "keyword.declaration.sea",
          "match": "\\b(Entity|Resource|Pattern|Flow|Relationship|Instance|Constraint|Event|Aggregate|ValueObject|Service|Repository|Command|Query)\\b"
        },
        {
          "name": "keyword.property.sea",
          "match": "\\b(Property|of|type|to|matches|cardinality|description|required|default|minimum|maximum|minLength|maxLength|pattern|unit|quantity)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.sea",
          "match": "\\b(String|Integer|Decimal|Boolean|UUID|DateTime|Date|Time|Duration|Email|URL|Phone|Money|Quantity|Percentage|Binary|JSON|Any)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.sea",
          "match": "\\b(true|false|null|one_to_one|one_to_many|many_to_one|many_to_many)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.sea",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.sea",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
