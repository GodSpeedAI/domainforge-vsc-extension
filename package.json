{
  "name": "domainforge",
  "displayName": "DomainForge",
  "description": "Language support for the DomainForge SEA DSL - syntax highlighting, linting, and formatting",
  "version": "0.0.1",
  "publisher": "GodSpeedAI",
  "repository": {
    "type": "git",
    "url": "https://github.com/GodSpeedAI/domainforge-vsc-extension"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "domainforge",
    "sea",
    "dsl",
    "domain-modeling",
    "entity"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/web/extensionWeb.js",
  "extensionKind": [
    "workspace"
  ],
  "contributes": {
    "languages": [
      {
        "id": "domainforge",
        "aliases": [
          "DomainForge",
          "SEA DSL",
          "domainforge"
        ],
        "extensions": [
          ".sea"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "domainforge",
        "scopeName": "source.sea",
        "path": "./syntaxes/sea.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "DomainForge",
      "properties": {
        "domainforge.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the DomainForge language server."
        },
        "domainforge.server.path": {
          "type": "string",
          "scope": "machine",
          "default": "",
          "description": "Path to the DomainForge LSP server binary. Leave empty to use bundled binary."
        },
        "domainforge.formatting.indentStyle": {
          "type": "string",
          "scope": "resource",
          "enum": [
            "space",
            "tab"
          ],
          "default": "space",
          "description": "Indent style for formatting SEA files."
        },
        "domainforge.formatting.indentWidth": {
          "type": "number",
          "scope": "resource",
          "default": 4,
          "minimum": 1,
          "maximum": 8,
          "description": "Number of spaces per indent level when using space indentation."
        },
        "domainforge.mcp.enable": {
          "type": "boolean",
          "scope": "machine",
          "default": false,
          "description": "Enable the DomainForge MCP (Model Context Protocol) server for AI agent integration."
        },
        "domainforge.mcp.serverPath": {
          "type": "string",
          "scope": "machine",
          "default": "",
          "description": "Path to the DomainForge MCP server binary. Leave empty to use bundled binary."
        },
        "domainforge.mcp.rateLimits.diagnostics": {
          "type": "number",
          "scope": "machine",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum requests per second for the diagnostics tool."
        },
        "domainforge.mcp.rateLimits.hover": {
          "type": "number",
          "scope": "machine",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum requests per second for the hover tool."
        },
        "domainforge.mcp.rateLimits.definition": {
          "type": "number",
          "scope": "machine",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum requests per second for the definition tool."
        },
        "domainforge.mcp.rateLimits.references": {
          "type": "number",
          "scope": "machine",
          "default": 5,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum requests per second for the references tool."
        },
        "domainforge.mcp.rateLimits.renamePreview": {
          "type": "number",
          "scope": "machine",
          "default": 2,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum requests per second for the rename preview tool."
        },
        "domainforge.mcp.rateLimits.codeActions": {
          "type": "number",
          "scope": "machine",
          "default": 5,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum requests per second for the code actions tool."
        },
        "domainforge.mcp.auditLog.path": {
          "type": "string",
          "scope": "machine",
          "default": "",
          "description": "Path to the MCP server audit log file. Leave empty to disable audit logging."
        }
      }
    },
    "commands": [
      {
        "command": "domainforge.restartServer",
        "title": "DomainForge: Restart Language Server"
      },
      {
        "command": "domainforge.restartMcpServer",
        "title": "DomainForge: Restart MCP Server"
      },
      {
        "command": "domainforge.showMcpLogs",
        "title": "DomainForge: Show MCP Server Logs"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "compile-web": "node esbuild.js --web",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.web.json",
    "lint": "eslint src --ignore-pattern 'src/web/**'",
    "test": "vscode-test",
    "test-web": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=.",
    "copy-wasm": "cp ../domainforge/pkg/sea_core.js ../domainforge/pkg/sea_core.d.ts ../domainforge/pkg/sea_core_bg.wasm wasm/"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "25.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-web": "^0.0.77",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
